@page "/historitransaksi"

@using Integrasi_HTML.Component.HistoriTransaksi

    <div class="wrapper">
        <div class="main-panel">
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-4">
                            <img class="bni-logo" src="../../assets/img/bni-white.png"><br><br><br>
                            <div class="text-white">
                                <h2 class="teks-sidebar font-qs-bold">Cetak Transaksi Anda</h2><br>
                            </div>
                            <img class="nav-vektor2" src="../../assets/img/img-histori2.png">
                        </div>
                        @switch (message)
                        {
                            case "bulanberjalan":
                                {
                                    <BulanBerjalanComponent OnClick="ClickHandler"></BulanBerjalanComponent>
                                    break;
                                }

                            case "bulanterakhir":
                                {
                                    <BulanTerakhirComponent OnClick="ClickHandler"></BulanTerakhirComponent>
                                    break;
                                }

                            case "bulanlalu":
                                {
                                    <BulanLaluComponent OnClick="ClickHandler"></BulanLaluComponent>
                                    break;
                                }

                            case "sepuluhterakhir":
                                {
                                    <SepuluhTerakhirComponent OnClick="ClickHandler"></SepuluhTerakhirComponent>
                                    break;
                                }

                            case "transaksiberhasil":
                                {
                                    <TransaksiBerhasilComponent></TransaksiBerhasilComponent>
                                    break;
                                }

                            case "transaksigagal":
                                {
                                    <TransaksiGagalComponent></TransaksiGagalComponent>
                                    break;
                                }

                            default:
                                {
                                    <PilihTransaksiComponent OnClick="ClickHandler"></PilihTransaksiComponent>
                                    break;
                                }
                        }
                    </div>
                </div>
            </div>
            <!-- <div class="centered">Silakan Tekan Menu yang Anda Inginkan</div> -->
        </div>
    </div> 

@code {
    private string message = string.Empty;
                            void ClickHandler(string newMessage)
                            {
                                message = newMessage;
                            }
                        }
