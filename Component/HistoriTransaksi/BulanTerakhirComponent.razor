    private bool isVisible = false;
    private bool isBaris = false;
    private bool berhasil = true;
    private string startdate = new DateTime(DateTime.Now.Year, DateTime.Now.Month, DateTime.Now.Day).AddDays(-30).ToString("yyyy-MM-dd");
    private string enddate = new DateTime(DateTime.Now.Year, DateTime.Now.Month, DateTime.Now.Day).ToString("yyyy-MM-dd");
    private string hour = DateTime.Now.ToString("HH:mm:ss");
